<LeftSection@BoxLayout>:
    orientation: 'vertical'


<FileEntry@BoxLayout>:
    orientation: 'horizontal'
    spacing: 10
    TextInput:
        id: file_path_input
        multiline: False
        hint_text: "Enter Filepath/Plugin Name"
        text: "/home/ethgru/PluginPlay/build/pluginplay_examples.so"
        size_hint_x: 3

    Button:
        text: "Browse"
        on_press: app.utility_manager.browse(app)

    Button:
        text: "Submit"
        on_press: app.plugin_manager.plugin_loader()

<MessageSection@BoxLayout>:
    ScrollView:
        do_scroll_y: True
        do_scroll_x: False
        scroll_y: 0
        Label:
            id: message_label
            halign: 'left'
            size_hint_y: None
            height: self.texture_size[1]
            text_size: self.width, None
            text: ''
            color: 0, 0, 0, 1

<PluginSection@ScrollView>:
    ScrollView:
        do_scroll_y: True
        do_scroll_x: False
        scroll_y: 1
        BoxLayout:
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
            spacing: 5
            id: plugin_container



<RightSection@BoxLayout>:
    orientation: 'vertical'
    id: right_section
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            size: self.size
            pos: self.pos
    Label:
        text: "Tree Builder"
        size_hint_y: 1/30
        color: 0, 0, 0, 1

    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: 1/20
        spacing: 10
        Widget:
            size_hint_x: 1/5
        Button:
            text: "Libraries"
            on_press: app.utility_manager.class_types()
            size_hint_x: 1/10
        Button:
            text: "Inputs"
            on_press: app.run_manager.inputs_config()
            size_hint_x: 1/10
            id: input_button
        Button:
            text: "Property Type"
            on_press: app.run_manager.property_type_config()
            size_hint_x: 1/10
            id: property_type_button

        Button:
            text: "Run Module"
            on_press: app.run_manager.run()
            size_hint_x: 1/10
        
        Button:
            text: "Reset Tree"
            on_press: app.tree_manager.delete_tree()
            size_hint_x: 1/10
        Widget:
            size_hint_x: 1/5
        

    Widget:
        size_hint_y: None
        height:20
        
    ScrollView:
        do_scroll_y: True
        do_scroll_x: True
        scroll_y: 1
        scroll_x: .5
        BoxLayout:
            id: tree_section
            orientation: 'vertical'
            size_hint_y: None
            size_hint_x: None
            height: self.minimum_height
            spacing: 50

    

BoxLayout:
    padding: 10
    spacing: 10
    orientation: 'horizontal'
    LeftSection:
        canvas.before:
            Color:
                rgba: 37,150,190,1
            Rectangle:
                size: self.size
                pos: self.pos
        size_hint: 1/3, 1
        id: left_section
        Label:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, .2  #Transparent Grey
                Rectangle:
                    pos: self.pos
                    size: self.size
            text: "Import New Plugin"
            color: 0, 0, 0, 1
            size_hint_y: 3/100

        FileEntry:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, .2  #Transparent Grey
                Rectangle:
                    pos: self.pos
                    size: self.size
            id: file_entry
            background_color: 1, 1, 1, 0
            size_hint_y:4/100
        Widget:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, .2  #Transparent Grey
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y:1/100

        
        PluginSection:
            canvas.before:
                Color:
                    rgba: 0, 0, 0, .3  #Transparent Grey Darker
                Rectangle:
                    pos: self.pos
                    size: self.size
            id: plugin_section
            size_hint_y:70/100

        Label:
            text: "Console"
            color: 0, 0, 0, 1
            size_hint_y: 3/100
            canvas.before:
                Color:
                    rgba: 0, 0, 0, .4  #Transparent Grey
                Rectangle:
                    pos: self.pos
                    size: self.size

        MessageSection:
            id: message_section
            canvas.before:
                Color:
                    rgba: 0, 0, 0, .2  #Transparent Grey
                Rectangle:
                    pos: self.pos
                    size: self.size
            size_hint_y: 19/100
        
    RightSection:
        #canvas.before:
        #    Color:
        #        rgba: 0, 0, 0, .7  #Transparent Grey
        #    Rectangle:
        #        pos: self.pos
        #        size: self.size
        id: right_section
        size_hint: 2/3, 1
    

        
    
